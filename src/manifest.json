{
  "manifest_version": 2,
  "name": "Palm Tree Proof of Concept",
  "version": "1.0a",
  "applications": {
    "gecko": {
      "id": "pt-test-weather@mozilla.org",
      "strict_min_version": "79.0"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "pt-test-weather@mozilla.org",
      "strict_min_version": "79"
    }
  },
  "permissions": [
    "runtime",
    "urlbar"
  ],
  "background": {
    "scripts": [
      "shim.js",
      "background.js"
    ]
  },
  "incognito": "spanning",
  "experiment_apis": {
    "experiments_urlbar": {
      "schema": "experiments/urlbar/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["experiments", "urlbar"]],
        "script": "experiments/urlbar/api.js"
      }
    }
  }
}
